<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewHoTenCusTom"
        android:textStyle="bold"
        android:text="Họ Tên Sinh Viên"
        android:textSize="25sp"
        android:textColor="#f21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewNamSinhCustom"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewHoTenCusTom"
        android:textColor="#f21"
        android:textSize="20sp"
        android:text="Năm Sinh : 1999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textviewDiaChiCusTom"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/textviewHoTenCusTom"
        android:textColor="#0846D6"
        android:textSize="20sp"
        android:text="Cà Mau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imageviewEditcustom"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/edit"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/imageviewDeletecustom"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/imageviewEditcustom"
        android:src="@drawable/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
</RelativeLayout>